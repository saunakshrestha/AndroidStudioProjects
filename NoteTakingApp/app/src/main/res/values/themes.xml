<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteTakingApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryVariant">#646262</item>
        <item name="colorOnPrimary">@color/bluish</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/theme</item>
        <!-- Customize your theme here. -->


    </style>


    <!--    custom actionbar-->
    <style name="CustomActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--        status bar color-->
        <item name="colorPrimary">@color/white</item>
        <!--        action bar color-->
        <item name="colorPrimaryDark">@color/white</item>
        <!--        textView cursor, progress bar etc color-->
        <item name="colorAccent">@color/bluish</item>

        <item name="colorControlNormal">@color/white</item>

    </style>


</resources>